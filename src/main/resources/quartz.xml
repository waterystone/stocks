<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd  
    http://www.springframework.org/schema/context  http://www.springframework.org/schema/context/spring-context-3.0.xsd
    http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd"
	default-lazy-init="false">

	<!-- 加载配置 -->
	<context:property-placeholder location="classpath:stocks/service.properties"
		ignore-unresolvable="true" />

	<!-- 更新股票信息 -->
	<bean id="updateStocksJob"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<!-- 调用的类 -->
		<property name="targetObject">
			<ref bean="pullTask" />
		</property>
		<!-- 调用类中的方法 -->
		<property name="targetMethod">
			<value>updateStocksPrice</value>
		</property>
	</bean>
	<!-- 定义触发时间 -->
	<bean id="updateStocksCron" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<ref bean="updateStocksJob" />
		</property>
		<!-- cron表达式 -->
		<property name="cronExpression">
			<value>${update_stocks_cron}</value>
		</property>
	</bean>

	<!-- 更新上市公司 -->
	<bean id="updateCompaniesJob"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<!-- 调用的类 -->
		<property name="targetObject">
			<ref bean="pullTask" />
		</property>
		<!-- 调用类中的方法 -->
		<property name="targetMethod">
			<value>updateCompanies</value>
		</property>
	</bean>
	<!-- 定义触发时间 -->
	<bean id="updateCompaniesCron" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<ref bean="updateCompaniesJob" />
		</property>
		<!-- cron表达式 -->
		<property name="cronExpression">
			<value>${update_companies_cron}</value>
		</property>
	</bean>





	<!-- 总管理类 如果将lazy-init=false那么容器启动就会执行调度程序 -->
	<bean id="startQuertz" lazy-init="false" autowire="no"
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="updateStocksCron" />
				<ref bean="updateCompaniesCron" />
			</list>
		</property>
	</bean>
</beans>